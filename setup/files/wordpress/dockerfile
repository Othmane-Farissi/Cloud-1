FROM debian:bullseye

# Install dependencies
RUN apt-get update && apt-get install -y \
  wget \
  curl \
  php-fpm \
  php-mysql \
  mariadb-client


# Configure PHP-FPM (using correct path for PHP 8.x)
RUN mkdir -p /run/php && \
    sed -i 's/;daemonize = yes/daemonize = no/' /etc/php/*/fpm/php-fpm.conf

# Install WP-CLI
RUN curl -O https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar && \
    chmod +x wp-cli.phar && \
    mv wp-cli.phar /usr/local/bin/wp

# Copy scripts
COPY tools/sv.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/sv.sh

WORKDIR /var/www/html
EXPOSE 9000
CMD ["/usr/local/bin/sv.sh"]